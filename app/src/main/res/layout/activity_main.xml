<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Participation and attendance (10%)" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Field 1"
            android:text="100"
            android:inputType="number"
            android:maxLength="3"
            android:digits="0123456789"
            android:padding="12dp"
            android:minHeight="?android:attr/listPreferredItemHeight"
            android:background="?android:attr/selectableItemBackground"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 Homework assignments (20%)" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Field 2"
            android:text="100"
            android:inputType="number"
            android:maxLength="3"
            android:digits="0123456789"
            android:padding="12dp"
            android:minHeight="?android:attr/listPreferredItemHeight"
            android:background="?android:attr/selectableItemBackground"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group Presentation (10%)" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Field 3"
            android:text="100"
            android:inputType="number"
            android:maxLength="3"
            android:digits="0123456789"
            android:padding="12dp"
            android:minHeight="?android:attr/listPreferredItemHeight"
            android:background="?android:attr/selectableItemBackground"/>/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Midterm Exam 1 (10%)" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Field 4"
            android:text="100"
            android:inputType="number"
            android:maxLength="3"
            android:digits="0123456789"
            android:padding="12dp"
            android:minHeight="?android:attr/listPreferredItemHeight"
            android:background="?android:attr/selectableItemBackground"/>/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Midterm Exam 2 (20%)" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Field 5"
            android:text="100"
            android:inputType="number"
            android:maxLength="3"
            android:digits="0123456789"
            android:padding="12dp"
            android:minHeight="?android:attr/listPreferredItemHeight"
            android:background="?android:attr/selectableItemBackground"/>/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group Presentation (10%)" />

        <EditText
            android:id="@+id/editText6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Field 3"
            android:text="100"
            android:inputType="number"
            android:maxLength="3"
            android:digits="0123456789"
            android:padding="12dp"
            android:minHeight="?android:attr/listPreferredItemHeight"
            android:background="?android:attr/selectableItemBackground"/>/>
    </LinearLayout>

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Result: 0"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>